<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/justtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Please fill in the details ?"
        android:textSize="15dp"
        android:textStyle="bold"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Item Name"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/itemname"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:orientation="horizontal" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:text="Item Type"
            android:textSize="15dp"
            android:textStyle="bold"
            />
         <RadioGroup
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/typegroup">

             <RadioButton
                 android:id="@+id/count"
                 android:layout_width="wrap_content"
                 android:layout_height="30dp"
                 android:background="@android:color/white"
                 android:text="COUNT"
                 android:textColor="#5DBCD2"
                 android:textStyle="bold" />

             <RadioButton
                 android:id="@+id/weight"
                 android:layout_width="wrap_content"
                 android:layout_height="30dp"
                 android:layout_marginLeft="5dp"
                 android:background="@android:color/white"
                 android:text="WEIGHT"
                 android:textColor="#5DBCD2"
                 android:textStyle="bold" />

         </RadioGroup>

    </LinearLayout>





<LinearLayout

android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
android:orientation="horizontal" >


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/category"
    android:text="Item Category"
    android:textSize="15dp"
    android:textStyle="bold"
    />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/typecategory">

    <RadioButton
        android:id="@+id/medicine"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/white"
        android:text="MEDICINE"
        android:textColor="#5DBCD2"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/grocery"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/white"
        android:text="GROCERY"
        android:textColor="#5DBCD2"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/disposables"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/white"
        android:text="DISPOSABLES"
        android:textColor="#5DBCD2"
        android:textStyle="bold" />




</RadioGroup>

</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost"
            android:text="Item CostPrice"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/itemcost"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sell"
            android:text="Item SellingPrice"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/itemsell"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/piece"
            android:text="Pieces Per Box"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/pieces"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </LinearLayout>


    <Button
        android:id="@+id/ok"
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_gravity="center"/>







    </LinearLayout>